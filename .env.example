# CV AI Enhancer - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# Supabase PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# Supabase Configuration
# Your Supabase project URL (found in Supabase Dashboard > Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (found in Supabase Dashboard > Settings > API)
# This key is safe to expose in client-side code
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service role key (found in Supabase Dashboard > Settings > API)
# ⚠️ KEEP THIS SECRET - Never expose this in client-side code
# This key has admin privileges and bypasses Row Level Security
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Trigger.dev Configuration
# Your Trigger.dev project ID (found in Trigger.dev Dashboard)
TRIGGER_PROJECT_ID=proj_your-project-id

# Your Trigger.dev secret key (found in Trigger.dev Dashboard > Settings > API Keys)
# ⚠️ KEEP THIS SECRET - Never expose this in client-side code
TRIGGER_SECRET_KEY=your-trigger-secret-key

# Optional: Trigger.dev public API key (if using public API)
# This key is safe to expose in client-side code
NEXT_PUBLIC_TRIGGER_PUBLIC_API_KEY=

# OpenAI Configuration
# Your OpenAI API key (found at https://platform.openai.com/api-keys)
# ⚠️ KEEP THIS SECRET - Never expose this in client-side code
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Puppeteer Configuration
# Path to Chromium executable for PDF generation (only needed in serverless environments)
# Leave empty to use default Puppeteer Chromium
PUPPETEER_EXECUTABLE_PATH=

# Langfuse (Optional - for AI observability and tracing)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_BASE_URL=https://cloud.langfuse.com
